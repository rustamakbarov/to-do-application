datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String
  tasks Task[]
}

model Task {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  task      String
  author    User   @relation(fields: [authorId], references: [id])
  authorId  String  @db.ObjectId
}